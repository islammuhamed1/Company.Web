@model IEnumerable<EmployeeDto>
<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset -2" asp-action="Index">
        <div class="col-8">
            <input type="text" name="searchInput" class="form-control" placeholder="Search Employee" aria-label="Search By Name" aria-describedby="button-addon2">
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success">
        </div>
    </form>
</div>
<div class="mt-5 alert alert-dark">
    <h3 class="text-center">@TempData["TextTempMessage"]</h3>
</div>
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="text-center">
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(X => employee.Name)</td>
                    <td>@Html.DisplayFor(X => employee.Email)</td>
                    <td>@Html.DisplayFor(X => employee.Age)</td>
                    <td>@Html.DisplayFor(X => employee.Salary)</td>
                    <td>@Html.DisplayFor(X => employee.Address)</td>
                    <td>@Html.DisplayFor(X => employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(X => employee.HiringDate)</td>

                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        @* <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a> *@

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </td>


                </tr>



                <!-- Modal -->
                

            }
        </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-info">
        <h4>There is No Employee :(</h4>
    </div>
}